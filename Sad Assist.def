; Definition file for Kung Fu Man
; Contains all the filenames needed for the character

; Player information
[Info]
name = "SadAssist"        ;Name of character
displayname = "Sad Assist" ;Name of character to display
versiondate = 06,23,2022    ;Version date of character (MM-DD-YYYY or X.XX)
mugenversion = 1.1          ;Version of M.U.G.E.N character works on (X.XX)
author = "Ziddia"         ;Character author name
pal.defaults = 1,2,3,4      ;Default palettes in order of preference (up to 4)
                            ;Numbering starts from 1
localcoord = 320,240        ;Local coordinate space width and height

; Files for the player
[Files]
cmd     = System/SadAssist.cmd           ;Command set
cns     = System/SadAssist.cns           ;Constants
st      = States/SadAssist-Supernull.st  ;Supernull loader
st0     = States/SadAssist-Negatives.st  ;Negatives
st1     = States/SadAssist-Capture.st    ;Capture+Management
stcommon = common1.cns      			 ;Common states (from data/ or motif)
sprite  = System/SadAssist.sff           ;Sprite
anim    = System/SadAssist.air           ;Animation
sound   = System/SadAssist.snd           ;Sound

; Maps character selection buttons to palette numbers.
[Palette Keymap]
x = 1 ;Press button X to select palette 1, etc.
y = 2
z = 3
a = 4
b = 5
c = 6
;x2 = 7 ;Hold Start and press button X for palette 7, etc.
;y2 = 8
;z2 = 9
;a2 = 10
;b2 = 11
;c2 = 12

; Arcade mode
[Arcade]
intro.storyboard = intro.def
ending.storyboard = ending.def
